# Database (MariaDB)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=1234
DB_NAME=anam_core_liberia

# Database Logging (TypeORM)
# Options:
# - none/off/false/0  -> disable all DB logs
# - all/true/1/on     -> enable all logs
# - comma list (query,error,schema,warn,info,log,migration)
# Default (when unset): error,warn
DB_LOGGING=error,warn

# Security Settings
CHALLENGE_EXPIRY_MINUTES=5
SESSION_SECRET=complex_password_at_least_32_characters_long_replace_in_production

# System Admin (Initial Setup - DO NOT CHANGE AFTER FIRST RUN)
SYSTEM_ADMIN_USERNAME=admin
SYSTEM_ADMIN_PASSWORD=1234
SYSTEM_ADMIN_MNEMONIC=your twelve word mnemonic phrase goes here for wallet generation

# Development
NODE_ENV=development

# Blockchain (Base Sepolia Testnet)
BASE_RPC_URL=https://sepolia.base.org
BASE_CHAIN_ID=84532

# Smart Contract Addresses (Base Sepolia)
DID_REGISTRY_ADDRESS=0xYourDID_REGISTRY_ADDRESS
VC_STATUS_REGISTRY_ADDRESS=0xYourVC_STATUS_REGISTRY_ADDRESS
EVENT_FACTORY_ADDRESS=0xYourEventFactoryAddress  # EventFactory contract address
BASE_USDC_ADDRESS=0xYourUSDCAddress             # USDC token address on Base Sepolia
